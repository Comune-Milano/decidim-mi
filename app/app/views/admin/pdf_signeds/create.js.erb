$(document).ready(function() {
    $('#myModal-assegnazioneProtocollo').hide();
    if (<%= @error_message == 1 %>) {
        $('#myModal-risposta-content').html('Non è stato possibile effettuare la protocollazione del file. Si prega di contattare l\'asssistenza se il problema persiste.');
    }
    else {
        $('#myModal-risposta-content').html('Gentile <%= @nome_utente %>, ai documenti inseriti è stato associato il numero di protocollo "<%= @protocollo %>".<br/> Riceverà notifica all\'indirizzo <%= @mail_utente %>.<br/>Grazie,<br/>Staff di Milano Partecipa');
    }
    $('#myModal-risposta').show();
});