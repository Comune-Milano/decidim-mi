<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small" %>
    <%= t(".back") %>
  <% end %>
<% end %>
<div class="row column">
  <div class="callout secondary">
    <%#= t(".compare_help") %>
    <%#= link_to t(".more_information"), decidim.page_path("initiatives"), target: "_blank" %>
    Se una delle petizioni che vedi qui giù è simile alla tua, ti incoraggiamo a supportarla. La tua proposta avrà più possibilità di conseguire l'obiettivo. <a href="https://partecipazione.comune.milano.it/pages/regolamentocomunalepartecipazione" target="_blank">(Maggiori informazioni)</a>
  </div>
</div>
<br>

<div class="row small-up-1 medium-up-2 card-grid">
  <%= render similar_initiatives %>
</div>

<div class="row">
  <div class="columns mediumlarge-4 small-12 mediumlarge-push-4">
    <%= link_to t(".continue"), next_wizard_path, class: "button expanded" %>
  </div>
</div>

<%= javascript_tag nonce: true do -%>
  var slides = document.getElementsByClassName("success card__text--status");
  for (var i = 0; i < slides.length; i++) {
    if(slides.item(i).innerHTML == "published") {
      slides.item(i).innerHTML = "Pubblicata";
    }
    if(slides.item(i).innerHTML == "accepted") {
      slides.item(i).innerHTML = "Accettata";
    }
  }
  var slides2 = document.getElementsByClassName("alert card__text--status");
  for (var i = 0; i < slides2.length; i++) {
    if(slides2.item(i).innerHTML == "discarded") {
        slides2.item(i).innerHTML = "Scartata";
    }
    if(slides2.item(i).innerHTML == "rejected") {
        slides2.item(i).innerHTML = "Rifiutata";
    }
  }
<% end -%>


<script>

  $('ul li').each(function(i) {
    if($(this).text() == 'petizioni') {
      $(this).removeClass();
      $(this).addClass("main-nav__link main-nav__link--active");
      return false;
    }
  });

  $(".large-6").css("width", "75%");


</script>

