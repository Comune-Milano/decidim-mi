<div class="row column">
  <%= scopes_picker_field form, :decidim_scopes_id, root: nil %>
</div>

<div class="row column">
  <%= form.number_field :supports_required, min: 1, step: 1 %>
</div>

<script>
    var label1 = "<%= t('_decidim_scopes') %>";
    var label2 = "<%= t('_supports_required') %>";
    var abbr = "abbr title";
</script>
<%= javascript_tag nonce: true do %>
  var labels = document.getElementsByTagName('label');
  for(var i = 0; i < labels.length; i++) {
    if(labels[i].htmlFor == 'initiatives_type_scope_decidim_scopes_id') {
        labels[i].innerHTML = label1;
    }
    if(labels[i].htmlFor == 'initiatives_type_scope_supports_required') {
      var label_content = labels[i].innerHTML.split(abbr);
      label_content[0] = label2;
      labels[i].innerHTML = label_content[0] + "<" + abbr + label_content[1];
    }
  }
<% end -%>
