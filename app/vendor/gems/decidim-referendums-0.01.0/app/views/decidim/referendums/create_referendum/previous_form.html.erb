<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small" %>
    <%= t(".back") %>
  <% end %>
<% end %>

<div class="row">
  <div class="medium-centered">
    <div class="callout secondary">
      <%#= t ".help" %>
      <b>ATTENZIONE</b>
      Il Titolo e la Descrizione devono corrispondere alla proposta referendaria gi√† approvata dal Collegio dei Garanti.
      <%= link_to t(".more_information"), "https://partecipazione.comune.milano.it/pages/referendum", target: "_blank" %>.
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="medium-centered">
    <div class="card">
      <div class="card__content">
        <%= decidim_form_for(@form, url: next_wizard_path, method: :put, html: { class: "form new_referendum_previous_form" }) do |f| %>
          <%= f.hidden_field :type_id %>

          <div class="field">
            <%= f.text_field :title, autofocus: true, required: true %>
          </div>

          <div class="field">
            <%= f.editor :description, lines: 8, toolbar: :full, required: true %>
          </div>

          <div class="actions">
            <%= f.submit t(".continue"), class: "button expanded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>

  $('ul li').each(function(i) {
    if($(this).text() == 'Referendum') {
      $(this).removeClass();
      $(this).addClass("main-nav__link main-nav__link--active");
      return false;
    }
  });

</script>

