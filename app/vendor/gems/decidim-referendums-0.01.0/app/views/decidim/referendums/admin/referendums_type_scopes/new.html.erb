<h2 class="process-title-summary">
	<%#= t ".title" %>
	AGGIUNGI L'AMBITO TERRITORIALE PER QUESTO TIPO DI REFERENDUM
</h2>

<%= decidim_form_for @form,
                     url: referendums_type_referendums_type_scopes_path(params[:referendums_type_id]),
                     html: { class: "form new_referendums_type_scopes" } do |f| %>
  <%= render partial: "form", object: f %>

  <div class="button--double form-general-submit">
    <%= f.submit t(".create") %>
    <%= link_to t(".back"), edit_referendums_type_path(params[:referendums_type_id]), class: "button" %>
  </div>
<% end %>
