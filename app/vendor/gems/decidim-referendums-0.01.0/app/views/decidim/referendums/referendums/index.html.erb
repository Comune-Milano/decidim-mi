<%
edit_link(
  decidim_admin_referendums.referendums_path,
  :list,
  :referendum
)
%>

<% provide :meta_title, t("referendums.index.title", scope: "decidim") %>

<%= participatory_space_wrapper do %>
  <div class="row columns">
    <div class="title-action">
      <%= render partial: "index_header" %>
    </div>
  </div>

  <div class="row">
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
    <div id="referendums" class="columns mediumlarge-8 large-9">
      <%= render partial: "referendums" %>
    </div>
  </div>
<% end %>

<%= javascript_include_tag "decidim/filters" %>
<%= javascript_include_tag "decidim/orders" %>
