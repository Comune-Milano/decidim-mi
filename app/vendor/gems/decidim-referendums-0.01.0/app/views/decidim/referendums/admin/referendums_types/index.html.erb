<div class="card" id="referendum-types">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t "decidim.admin.titles.referendums_types" %>
      <%= link_to t("actions.new_referendum_type", scope: "decidim.admin"),
                  ["new", "referendums_type"],
                  class: "button tiny button--title" if allowed_to? :create, :referendum_type %>
    </h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.referendums_types.fields.title", scope: "decidim.admin") %></th>
            <th><%= t("models.referendums_types.fields.created_at", scope: "decidim.admin") %></th>
            <th class="actions"><%= t("referendums_type.actions.title", scope: "decidim.resources") %></th>
          </tr>
        </thead>
        <tbody>
          <% @referendums_types.each do |referendum_type| %>
          <tr>
            <td>
              <% if allowed_to? :update, :referendum_type, referendum_type: referendum_type %>
                <%= link_to translated_attribute(referendum_type.title), edit_referendums_type_path(referendum_type) %>
              <% else %>
                <%= translated_attribute referendum_type.title %></td>
              <% end %>
            <td><%= l referendum_type.created_at, format: :short %></td>
            <td class="table-list__actions"><%= free_resource_permissions_link(referendum_type) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
