<h2 class="process-title-summary">
  <%#= t ".title" %>
  MODIFICA L'AMBITO TERRITORIALE PER QUESTO TIPO DI REFERENDUM
</h2>

<%= decidim_form_for @form,
                     url: referendums_type_referendums_type_scope_path(params[:referendums_type_id], current_referendum_type_scope),
                     html: { class: "form edit_referendum_type_scope" } do |f| %>
  <%= render partial: "form", object: f %>
  <div class="button--double form-general-submit">
    <%= f.submit t(".update"), class: "button" %>

    <% if allowed_to? :destroy, :referendum_type_scope, referendum_type_scope: current_referendum_type_scope %>
        <%= link_to t(".destroy"), referendums_type_referendums_type_scope_path(params[:referendums_type_id], current_referendum_type_scope),
                    method: :delete,
                    class: "alert button",
                    data: { confirm: t(".confirm_destroy") } %>
    <% end %>

    <%= link_to t(".back"), edit_referendums_type_path(params[:referendums_type_id]), class: "button" %>
  </div>
<% end %>
