<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small" %>
    <%= t(".back") %>
  <% end %>
<% end %>

<div class="row column">
  <div class="medium-centered">
    <div class="callout secondary">
      <%= t ".callout_text" %>
      <%= link_to t(".more_information"), decidim.page_path("referendums"), target: "_blank" %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="small-12 medium-centered">
    <div class="card">
      <div class="card__content">
        <%= render partial: "finish_help" %>
      </div>

      <div class="column actions">
        <%= link_to t(".go_to_my_referendums"), decidim_admin_referendums.referendums_path, class: "button expanded" %>
        <%= link_to t(".back_to_referendums"), referendums_path, class: "button white-button expanded" %>
      </div>
    </div>
  </div>
</div>



<script>

    $('ul li').each(function(i) {
        if($(this).text() == 'Referendum') {
            $(this).removeClass();
            $(this).addClass("main-nav__link main-nav__link--active");
            return false;
        }
    });

</script>
