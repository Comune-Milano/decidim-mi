<div class="collection-sort-controls row small-up-1 medium-up-3 card-grid">
  <div class="column">
    <%= order_selector available_orders, i18n_scope: "decidim.referendums.referendums.orders" %>
  </div>

  <div class="column">
    <%= render partial: "decidim/shared/results_per_page" %>
  </div>
</div>

<div class="row small-up-1 medium-up-2 card-grid">
  <%= render referendums %>
</div>
<%= decidim_paginate referendums %>

<%= javascript_tag nonce: true do -%>
  var slides = document.getElementsByClassName("success card__text--status");
  for (var i = 0; i < slides.length; i++) {
      if(slides.item(i).innerHTML == "published") {
        slides.item(i).innerHTML = "Pubblicato";
      }
      if(slides.item(i).innerHTML == "accepted") {
        slides.item(i).innerHTML = "Ammesso";
      }
  }

  var slides2 = document.getElementsByClassName("alert card__text--status");
  for (var i = 0; i < slides2.length; i++) {
    if(slides2.item(i).innerHTML == "discarded") {
        slides2.item(i).innerHTML = "Scartato";
    }
    if(slides2.item(i).innerHTML == "rejected") {
        slides2.item(i).innerHTML = "Firme insufficienti";
    }
  }

  
  var slides3 = document.getElementsByClassName("warning card__text--status")
  for (var i = 0; i < slides3.length; i++) {
    if(slides3.item(i).innerHTML == "validating") {
        slides3.item(i).innerHTML = "valutare"
    }
  }


<% end -%>
