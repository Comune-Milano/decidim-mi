<% add_decidim_meta_tags({
                             image_url: current_referendum.type.banner_image.url,
                             description: translated_attribute(current_referendum.description),
                             title: translated_attribute(current_referendum.title),
                             url: referendum_url(current_referendum.id),
                             twitter_handler: current_organization.twitter_handler
                         }) %>

<%
  edit_link(
      resource_locator(current_participatory_space).edit,
      :update,
      :referendum,
      referendum: current_participatory_space
  )
%>

<%= participatory_space_floating_help %>

<% add_decidim_page_title(translated_attribute(current_referendum.title)) %>
<% provide :meta_image_url, current_referendum.type.banner_image.url %>
<div class="row">
  <% unless current_referendum.online_signature_type? %>
    <div class="column">
      <div class="callout secondary">
        <p>
          <%= t ".any_vote_method" if current_referendum.any_signature_type? %>
          <%= t ".offline_method" if current_referendum.offline_signature_type? %>
        </p>
      </div>
    </div>
  <% end %>

  <div class="columns section view-side mediumlarge-4 mediumlarge-push-8 large-3 large-push-9">
    <div class="card">
      <div class="card__content">

        <% if @is_closed %>
          <%= render partial: "progress_bar2" %>
        <% else %>
          <%= render partial: "progress_bar" %>
        <% end %>


        <% if current_user != nil && (current_user.admin? || current_user.officialized?) %>
          <div style="text-align: center; font-size: .875rem; margin: .5rem 0 1rem; color: #8c838a">
            <% data_ultima_superata = current_referendum.is_offline_signature_date_passed(current_referendum.id) %>
            <%# if data_ultima_superata %>
            <%#= t("activemodel.attributes.referendum.signatures_offline") %>
            <%#= current_referendum.offline_signature_count(current_referendum.id) %>
            <% if @is_closed %>
              DI CUI <%= current_referendum.offline_signature_count(current_referendum.id) %> SONO FIRME OFFLINE
            <% end %>
          </div>
          <% if current_referendum.votes_enabled? %>
            <div id="referendum-<%= current_referendum.id %>-vote-cabin">
              <%= render partial: "vote_cabin", locals: { referendum: current_referendum } %>
            </div>
          <% end %>
          <%= render partial: "interactions" %>
        <% end %>


      </div>
    </div>

    <% if current_user %>
      <div class="card text-center">
        <div class="card__content">
          <%= cell "decidim/follow_button", current_participatory_space, inline: false, large: true %>
          <small><%= t(".follow_description") %></small>
        </div>
      </div>
    <% end %>
    <%= render partial: "decidim/shared/share_modal" %>
    <%= embed_modal_for referendum_referendum_widget_url(current_referendum, format: :js) %>
    <%= resource_reference(current_referendum) %>
  </div>

  <div class="columns mediumlarge-8 mediumlarge-pull-4">
    <div class="section">
      <div class="row column">
        <h2 class="heading2">
          <%= translated_attribute(current_referendum.title) %>
        </h2>
        <%= render partial: "author", locals: {referendum: current_referendum} %>
      </div>
      <br>
      <div class="row column">
        <%= render partial: "referendum_badge", locals: {referendum: current_referendum} %>
        <%= decidim_sanitize translated_attribute(current_referendum.description) %>
        <%= render partial: "tags", locals: {resource: current_referendum} %>
      </div>

      <%= render partial: "result", locals: {referendum: current_referendum} %>
    </div>

    <%= attachments_for current_referendum %>

    <%= render partial: "supports", locals: {referendum: current_referendum} %>
  </div>
</div>

<%= comments_for current_referendum if current_referendum.published? %>



<%= javascript_tag nonce: true do -%>
  $("svg").css("fill", "white");
<% end -%>


<div id="myModal-risposta-referendum" class="modal-custom" style="display:none">
  <div class="modal-content">
      <div id="myModal-risposta-referendum-content" style="margin-bottom: 15px"></div>
      <input type="button" onclick="closeModalRispostaReferendum()" value="Chiudi" class="button btn btn-primary"/>
  </div>
</div>



<%= javascript_tag do -%>

  function closeModalRispostaReferendum() {
    $('#myModal-risposta-referendum').hide();
  }

<% end %>