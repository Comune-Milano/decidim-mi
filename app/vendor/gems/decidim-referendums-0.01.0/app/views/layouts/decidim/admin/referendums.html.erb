<% content_for :secondary_nav do %>
  <div class="secondary-nav secondary-nav--subnav">
    <ul>
      <% if allowed_to?(:index, :referendum) %>
        <li
        <% if is_active_link?(decidim_admin_referendums.referendums_path) %> class="is-active"
        <% end %>>
          <%= aria_selected_link_to I18n.t("menu.referendums", scope: "decidim.admin"), decidim_admin_referendums.referendums_path %>
        </li>
      <% end %>
      <% if !current_user.role?("initiative_manager") %>
        <% if allowed_to?(:manage, :referendum_type) %>
          <li
          <% if is_active_link?(decidim_admin_referendums.referendums_types_path) %> class="is-active"
          <% end %>>
            <%= aria_selected_link_to I18n.t("menu.referendums_types", scope: "decidim.admin"), decidim_admin_referendums.referendums_types_path %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>
  <div class="process-title">
    <div class="process-title-content">
      <%= link_to t("decidim.admin.titles.referendums"), decidim_referendums.referendums_path, target: "_blank" %>
    </div>
  </div>

  <div class="process-content">
    <%= yield %>
  </div>
<% end %>
